#lang racket

(provide get-sign)

(define (get-sign number)

  "Return whether a number is positive or negative or zero"
  (if (zero? number) "zero"
      (if (> number 0)
          "positive"
          "negative")))


(define (get-sign-2 number)
  (cond
    [(zero? number) "zero"]
    [(> number 0) "positive"]
    [else "negative"]))


(define (month-days month year)
  (case month
    [(2) (if (leap-year? year) 29 28)]
    [(1 3 5 7 8 10 12) 31]
    [(4 6 9 11) 30]))

(define (leap-year? year)
  (zero? (remainder year 4)))